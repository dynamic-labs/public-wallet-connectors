{
  "name": "release",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "scripts/release/src",
  "projectType": "library",
  "tags": [],
  "// targets": "to see all targets run: nx show project release --web",
  "targets": {
    "bump-version": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "scripts/release",
        "command": "tsx src/commands/bump-version.ts"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "scripts/release",
        "command": "tsx src/commands/publish-packages.ts"
      }
    }
  }
}
