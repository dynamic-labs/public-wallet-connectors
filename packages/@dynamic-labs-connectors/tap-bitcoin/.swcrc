{
  "$schema": "https://swc.rs/schema.json",
  "jsc": {
    "target": "es2017",
    "parser": {
      "syntax": "typescript",
      "decorators": true,
      "dynamicImport": true
    },
    "transform": {
      "decoratorMetadata": true,
      "legacyDecorator": true
    },
    "keepClassNames": true,
    "externalHelpers": false,
    "loose": true,
    "minify": {}
  },
  "module": {
    "type": "es6"
  },
  "sourceMaps": false,
  "exclude": [
    "jest.config.ts",
    ".*\\.spec.tsx?$",
    ".*\\.test.tsx?$",
    "./src/jest-setup.ts$",
    "./**/jest-setup.ts$",
    ".*.cjs$",
    ".*.js$"
  ]
}
