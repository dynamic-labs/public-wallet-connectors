{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "main",
  "cli": {
    "packageManager": "pnpm"
  },
  "plugins": [
    {
      "plugin": "@nx/js/typescript",
      "options": {
        "typecheck": {
          "targetName": "typecheck"
        },
        "build": {
          "targetName": "build",
          "configName": "tsconfig.lib.json"
        }
      },
      "exclude": ["scripts/release/*"]
    },
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "lint"
      }
    },
    {
      "plugin": "@nx/jest/plugin",
      "options": {
        "targetName": "test"
      }
    }
  ],
  "namedInputs": {
    "default": ["{projectRoot}/**/*"]
  },
  "targetDefaults": {
    "build": {
      "cache": true,
      "dependsOn": ["^build"],
      "options": {
        "assets": [
          "{workspaceRoot}/CHANGELOG.md",
          "{workspaceRoot}/LICENSE",
          "{workspaceRoot}/.npmignore",
          "{projectRoot}/.npmrc",
          "{projectRoot}/*.md"
        ]
      },
      "inputs": ["default", "^default"]
    }
  },
  "release": {
    "version": {
      "generatorOptions": {
        "currentVersionResolver": "disk",
        "specifierSource": "prompt"
      },
      "git": {
        "commit": false,
        "tag": false,
        "push": false
      }
    },
    "changelog": {
      "projectChangelogs": false,
      "workspaceChangelog": {
        "createRelease": "github",
        "file": false
      },
      "git": {
        "commit": false,
        "tag": false,
        "push": false
      }
    }
    
  }
}
